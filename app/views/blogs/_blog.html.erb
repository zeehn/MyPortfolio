<div class="blog-post">
  <h2 class="blog-post-title"><%= link_to blog.title, blog %></h2>
    <p class="blog-post-meta">published <%= distance_of_time_in_words(blog.created_at, Time.now) %></p>
    <p class="blog-post-meta">
      <% if logged_in?(:admin) %>
        <%= link_to blog.status, toggle_status_blog_path(blog), method: :post %> /
        <%= link_to "Edit", edit_blog_path(blog) %> /
        <%= link_to "Delete", blog, method: :delete, data: { confirm: 'Sure?' } %> 
      <% end %>
    </p>
    <p><%= blog.body %></p>
  </div>