<%= render "shared/projects_hero" %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @projects.each do |project| %>
      <div class="col-md-4">
        <div class="card mb-4 box-shadow">
          <%= link_to (image_tag "placeholder.jpg", class: "card-img-top"), project %>
          <div class="card-body">
            <p class="card-text"><%= project.description %></p>
            <div class="d-flex justify-content-between align-items-center">
            <% if logged_in?(:admin) %>
            <div class="btn-group">
              <%= link_to "Edit Project", edit_project_path(project), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to "Delete Project", project, method: :delete, data: { confirm: 'Sure?'}, class: "btn btn-sm btn-outline-secondary" %>
            </div>
            <% end %>
            <small class="text-muted">9 mins</small>
          </div>
        </div>
      </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
