<%= image_tag @project.main_image_file_name %>

<p><%= @project.title %></p>
<p><%= @project.sub_title %></p>
<p><%= @project.description %></p>


<% if @project.technologies.present? %>
<h3>Technologies used:</h3>
<ul>
  <% @project.technologies.each do |tech| %>
    <li><%= tech.name %></li>
  <% end %>
</ul>
<% end %>